modules = ["c"]

[nix]
channel = "stable-25_05"
packages = ["SDL2"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Visual RAM System"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "visual_ram_demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Demo Interactive"

[[workflows.workflow]]
name = "Visual RAM System"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "apt-get update && apt-get install -y libsdl2-dev && make clean && make all && ./demo"

[[workflows.workflow]]
name = "visual_ram_demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sudo apt-get update && sudo apt-get install -y libsdl2-dev && make clean && make all && ./demo"

[[workflows.workflow]]
name = "Demo Interactive"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "make all && ./demo"

[[workflows.workflow]]
name = "Tests Exhaustifs Complets"
author = 45578232
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "make -f Makefile_tests_exhaustifs install-deps"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "make -f Makefile_tests_exhaustifs all"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "make -f Makefile_tests_exhaustifs run-all"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"✅ Tests exhaustifs terminés - Consultez les rapports générés\""
